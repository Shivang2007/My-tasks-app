<NewFolderBox>:
    orientation:'vertical'
    size_hint_y:None
    height:'110dp'
    
    MDTextField:
        hint_text:'Folder Name'
        required:True
        multiline:False
        text:'New Folder'
        id:cname
        text_color_focus:'red'
    
    MDTextField:
        hint_text:'Folder Description'
        required:True
        multiline:False
        text:'Folder'
        id:descname
        text_color_focus:'red'
        

<LabelBox>:
    orientation:'vertical'
    size_hint_y:None
    height:'70dp'
    
    MDTextField:
        hint_text:'Label Description'
        required:True
        multiline:False
        text:'Note'
        id:cname
        text_color_focus:'red'